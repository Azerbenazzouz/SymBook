{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <section>
        <div class="container-fluid">
            <div class="container my-4">
                <div class="row">
                    <div class="col-md-6 py-3">
                    <img alt="white book on black textile" class="w-100 img-thumbnail" src={{ livre.image }}
                    
                    ></div>
                    <div class="col-md-6 pt-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="text-primary">{{ livre.titre|capitalize }}</h2>
                            <h4 class="text-success border rounded-5 px-2 py-1 border-success">{{ livre.prix }} DT</h4>
                        </div>

                        <h5>ISBN: {{ livre.isbn }}</h5>
                        <h5>Editeur: {{ livre.editeur }}</h5>
                        <h5>Date Edition: {{ livre.editedAt|date('d-m-Y') }}</h5>
                        <h5>Description: </h5>
                        <p>
                            {{ livre.resume }}
                        </p> 
                        <div class="d-flex justify-content-between gap-3">
                        {% if livre.qte > 0 %}
                    <a class="btn btn-info w-100 mb-3" href="{{path('cart_add',{id:livre.id})}}" type="button">Ajouter Panier</a> 
                        {% else %}
                            <p class="text-danger">Temporairement en rupture de stock</p>
                    {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
        <section>
        <div class="container">
            <h1 class="text-capitalize text-center">suggestions</h1>
            <div class="row d-flex justify-content-around mx-3 gap-3">
                {% for livre in livres %}
                    {% include 'home/_product.html.twig' with {livre: livre} only %}
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}
