{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
    <!-- Header -->
    <header class="py-5 bg-info text-white">
        <div class="container px-4 px-lg-5 my-5">
            <div class="text-center">
                <h1 class="display-4 fw-bolder">SymBook</h1>
                <p class="lead fw-normal text-white-50 mb-0">Shop your favorite books</p>
            </div>
        </div>
    </header>
    <!-- the New 8 books-->
    <section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-3 justify-content-center">
                    {% for livre in livres %}
                        <div class="col mb-5">
                            <div class="card h-100">
                                <!-- Product image-->
                                <img class="card-img-top" src={{livre.image}} alt="..." />
                                <!-- Product details-->
                                <div class="card-body p-4">
                                    <div class="text-center">
                                        <!-- Product name-->
                                        <h5 class="fw-bolder">{{livre.titre}}</h5>
                                        <!-- Product reviews-->
                                        <div class="d-flex justify-content-center small text-warning mb-2">
                                            {% set note = random(6)%}
                                            {% for i in range(1, 6) %}
                                                {% if i <=  note %}
                                                    <i class="fa-solid fa-star"></i>
                                                {% else %}
                                                    <i class="fa-regular fa-star"></i>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                        <!-- Product price-->
                                        <span class="text-muted text-decoration-line-through">20.00 TND</span>
                                        {{livre.prix}} TND
                                    </div>
                                </div>
                                <!-- Product actions-->
                                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                    <div class="text-center">
                                        <a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                {# more #}
                <div class="text-end ">
                    <a class="btn btn-outline-primary mt-auto" href="{{url('app_livres')}}">More</a>
                </div>
            </div>
        </section>
{% endblock %}
